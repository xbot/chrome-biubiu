{
    "name" : "BiuBiu",
    "version" : "1.0.0",
    "description" : "A helper for blocking JQuery AJAX requests.",
    "permissions" : ["http://*/*", "https://*/*", "notifications", "tabs"],
    "options_page" : "options.html",
    "page_action" : {
        "default_icon" : "img/bug_off.png",
        "default_title" : "BiuBiu is off."
    },
    "background" : {
        "scripts" : ["background.js"]
    },
    "content_scripts" : [
        {
            "matches" : ["http://*/*", "https://*/*"],
            "js" : ["lib/jquery-1.8.1.min.js", "lib/jquery.cookie.js", "content.js"],
            "runat" : "document_idle",
            "all_frames" : false
        }
    ],
    "icons" : {
        "128" : "img/bug_off.png",
        "64" : "img/bug_off.png",
        "48" : "img/bug_off.png",
        "32" : "img/bug_off.png",
        "16" : "img/bug_off.png"
    },
    "manifest_version" : 2
}
